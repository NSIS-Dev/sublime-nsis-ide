\${GetParameters} \$${1:var}

\${If}   \$${1} == "/?"
\${OrIf} \$${1} == "--?"
\${OrIf} \$${1} == "--h"
\${OrIf} \$${1} == "--help"
\${OrIf} \$${1} == "-?"
\${OrIf} \$${1} == "-h"
\${OrIf} \$${1} == "-help"
\${OrIf} \$${1} == "/h"
\${OrIf} \$${1} == "help"
	${2:# your help dialog}
\${EndIf}
]]></content>
	<tabTrigger>do:Help Dialog</tabTrigger>
